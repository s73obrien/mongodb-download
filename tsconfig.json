{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "outDir": "./built",
    "types": ["node"],
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "**/*.spec.ts"
  ]
}